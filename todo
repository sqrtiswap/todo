#!/bin/sh

ls() {
	sort -f < "$HOME/todo/todo.txt"
}

did() {
	$PAGER "$HOME/todo/done.txt"
}

add() {
	# only provisional
	$EDITOR "$HOME/todo/todo.txt"
}

usage() { printf %s "That option does not seem to exist. \

todo 0.1 - simple todo list manager.

=> [a]dd [entry]	- Create a new entry.
=> ls | list		- List current todo list.
=> did			- Show already done items.
"
exit 0
}

case $1 in
	a*) add ;;
	did) did ;;
	l*) ls "$2" ;;
	*) usage
esac
